<div class="rsvp-index">
  <p id="notice"><%= notice %></p>

  <h3>RSVPs</h3>

  <table class="table">
    <thead>
      <tr>
        <th>Classmate</th>
        <th>Total cost</th>
        <th>Payment status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rsvps.each do |rsvp| %>
        <tr>
          <td><%= rsvp.classmate.full_name %></td>
          <td><%= money(rsvp.total_cost) %></td>
          <td><%= rsvp.payment_status %></td>
          <td><button class="btn btn-default"><%= link_to 'Show', event_rsvp_path(rsvp.event_id, rsvp.id) %></button></td>
          <td><button class="btn btn-default"><%= link_to 'Edit', edit_event_rsvp_path(rsvp.event_id, rsvp.id) %></button></td>
          <td><button class="btn btn-default"><%= link_to 'Destroy', event_rsvp_path(rsvp.event_id, rsvp.id), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button class="btn btn-default"><%= link_to 'New Rsvp', new_event_rsvp_path(@event) %></button>
</div>