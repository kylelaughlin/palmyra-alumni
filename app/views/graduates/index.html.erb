<div class="grad-index">
  <% content_for :head do %>
    <meta name="turbolinks-cache-control" content="no-cache">
  <% end %>

  <p id="notice"><%= notice %></p>

  <h1>Graduates</h1>


  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Class year</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @graduates.each do |graduate| %>
        <tr>
          <td><%= graduate.name %></td>
          <td><%= graduate.class_year %></td>
          <td><button class="btn btn-default"><%= link_to 'Edit', edit_graduate_path(graduate) %></button></td>
          <td><button class="btn btn-default"><%= link_to 'Destroy', graduate, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button class="btn btn-default"><%= link_to 'New Graduate', new_graduate_path %></button>
</div>