<div class="row">
  <div class="col-md-7">

    <h3>Upcoming Events</h3>
    <% @events.each do |event| %>

      <div class="card card-event">
        <h3><%= link_to event.name, event_path(event) %></h3>
        <p>Date: <%= event.date.strftime("%m/%d/%y") %></p>
        <p><%= simple_format(event.content) %></p>
        <%= link_to "See more and RSVP", event_path(event)%>
      </div>
    <% end %>
  </div>
  <div class="col-md-5">
    <h3>Other text</h3>
  </div>
</div>
