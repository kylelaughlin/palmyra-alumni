<% if flash[:alert] %>
  <div class="alert alert-danger">
    <button class="close" data-dismiss="alert">x</button>
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info">
    <button class="close" data-dismiss="alert">x</button>
    <%= flash[:notice] %>
  </div>
<% end %>
