<p id="notice"><%= notice %></p>

<h1>Event Options</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_options.each do |event_option| %>
      <tr>
        <td><%= event_option.name %></td>
        <td><%= event_option.price %></td>
        <td><%= link_to 'Show', event_option %></td>
        <td><%= link_to 'Edit', edit_event_option_path(event_option) %></td>
        <td><%= link_to 'Destroy', event_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Option', new_event_option_path %>
