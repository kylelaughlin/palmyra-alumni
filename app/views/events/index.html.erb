<p id="notice"><%= notice %></p>

<div class="events-index">
  <h1>Events</h1>


  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.content %></td>
          <div class="btn-group" role="group" aria-label="...">
            <td>
              <% if current_classmate.admin? %>  
                <button type="button" class="btn btn-default"><%= link_to 'Show', event %></button>
              <% end %>
              <button type="button" class="btn btn-default"><%= link_to 'More Details', event %></button>
            </td>
            <td>
              <% if current_classmate.admin? %>
                <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_event_path(event) %></button>
              <% end %>  
            </td>
            <td>
              <% if current_classmate.admin? %>
                <button type="button" class="btn btn-default"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></button>
              <% end %>
            </td>
          </div>  
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


<% if current_classmate.admin? %>
  <button class="btn btn-default"><%= link_to 'New Event', new_event_path %></button>
<% end %>
<!-- 
  <button type="button" class="btn btn-default"><%= link_to 'Create New Event', new_event_path %></button> -->
</div>

